import concurrent.futures
import zipfile
import csv
import os

MAX_ZIP_SIZE_GB = 10

def zip_files(input_path, output_path_template):
    zip_number = 1
    current_zip_size = 0

    with open(input_path, 'r') as csv_file:
        file_paths = csv.reader(csv_file)
        for file_path in file_paths:
            file_path = file_path[0]
            with open(file_path, 'rb') as file:
                arcname = os.path.relpath(file_path)

                # Check the size before adding each file
                file_size = os.path.getsize(file_path)
                if current_zip_size + file_size > MAX_ZIP_SIZE_GB * 1024**3:
                    # If adding the current file exceeds the limit, start a new zip file
                    current_zip_size = 0
                    zip_number += 1

                output_zip = output_path_template.format(zip_number)
                with zipfile.ZipFile(output_zip, 'a', zipfile.ZIP_DEFLATED, allowZip64=True) as zip_file:
                    zip_file.write(file_path, arcname=arcname)
                    current_zip_size += file_size

def process_csv(csv_file):
    output_zip_template = f"{os.path.splitext(csv_file)[0]}_part{{}}.zip"
    zip_files(csv_file, output_zip_template)
    return f"Zipped {csv_file} into multiple parts"

if __name__ == "__main__":
    csv_files = ["filelist1.csv", "filelist2.csv", "filelist3.csv"]  # Replace with your actual CSV files

    with concurrent.futures.ThreadPoolExecutor() as executor:
        results = list(executor.map(process_csv, csv_files))

    for result in results:
