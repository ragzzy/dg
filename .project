import time
import os
from watchdog.observers import Observer
from watchdog.events import FileSystemEventHandler

class NewFileHandler(FileSystemEventHandler):
    def on_created(self, event):
        if event.is_directory:
            return

        print(f"New file created: {event.src_path}")

if __name__ == "__main__":
    folder_to_watch = r'C:\Path\to\your\folder'  # Change this to the path you want to monitor
    
    event_handler = NewFileHandler()
    observer = Observer()
    observer.schedule(event_handler, path=folder_to_watch, recursive=False)
    observer.start()

    try:
        # Simulate a new file creation event every 5 seconds
        while True:
            time.sleep(5)
            new_file_path = os.path.join(folder_to_watch, 'new_file.txt')
            with open(new_file_path, 'w') as new_file:
                new_file.write("This is a new file content.")
    except KeyboardInterrupt:
        observer.stop()

    observer.join()
